<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPage">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape_rect1">

        <ImageButton
            android:id="@+id/tombolKeluar"
            android:src="@drawable/ic_logout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:contentDescription="tombol kembali"/>

        <TextView
            android:id="@+id/namaAkun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/emailAkun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/namaAkun"
            android:text="Nama Toko"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/nohp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailAkun"
            android:text="No Hp"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_below="@id/nohp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_rect3"
            android:padding="5dp">

            <TextView
                android:id="@+id/tabToko"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/shape_rect4"
                android:text="Toko"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tabOrder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Order"
                android:textColor="@color/white"/>


        </LinearLayout>

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/catalog"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- call data of store -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tokoTampilan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/baris_toko"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/riwayat"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

</RelativeLayout>